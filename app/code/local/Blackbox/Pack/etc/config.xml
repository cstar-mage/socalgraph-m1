<?xml version="1.0"?>
<config>
    <modules>
        <Blackbox_Pack>
            <version>0.1.0</version>
        </Blackbox_Pack>
    </modules>
    <global>
        <helpers>
            <blackbox_pack>
                <class>Blackbox_Pack_Helper</class>
            </blackbox_pack>
        </helpers>
        <models>
            <blackbox_pack>
                <class>Blackbox_Pack_Model</class>
            </blackbox_pack>
            <checkout>
                <rewrite>
                    <!--<cart>Blackbox_Pack_Model_Checkout_Cart</cart>-->
                </rewrite>
            </checkout>
            <shipping>
                <rewrite>
                    <shipping>Blackbox_Pack_Model_Shipping_Shipping</shipping>
                </rewrite>
            </shipping>
            <sales>
                <rewrite>
                    <order_item>Blackbox_Pack_Model_Sales_Order_Item</order_item>
                    <order_invoice_item>Blackbox_Pack_Model_Sales_Order_Invoice_Item</order_invoice_item>
                    <order_shipment_item>Blackbox_Pack_Model_Sales_Order_Shipment_Item</order_shipment_item>
                </rewrite>
            </sales>
        </models>
        <resources>
            <blackbox_pack_setup>
                <setup>
                    <module>Blackbox_Pack</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </blackbox_pack_setup>
        </resources>
        <sales>
            <quote>
                <item>
                    <product_attributes>
                        <step_count />
                    </product_attributes>
                </item>
            </quote>
        </sales>
        <events>
            <sales_quote_item_set_product>
                <observers>
                    <blackbox_pack_step_count>
                        <class>blackbox_pack/observer</class>
                        <method>salesQuoteItemSetStepCount</method>
                    </blackbox_pack_step_count>
                </observers>
            </sales_quote_item_set_product>
            <core_copy_fieldset_sales_convert_quote_item_to_order_item>
                <observers>
                    <blackbox_pack_quote_item_to_order_item>
                        <class>blackbox_pack/observer</class>
                        <method>copyFieldsetQuoteItemToOrderItem</method>
                    </blackbox_pack_quote_item_to_order_item>
                </observers>
            </core_copy_fieldset_sales_convert_quote_item_to_order_item>
            <core_copy_fieldset_sales_convert_order_item_to_quote_item>
                <observers>
                    <blackbox_pack_order_item_to_quote_item>
                        <class>blackbox_pack/observer</class>
                        <method>copyFieldsetOrderItemToQuoteItem</method>
                    </blackbox_pack_order_item_to_quote_item>
                </observers>
            </core_copy_fieldset_sales_convert_order_item_to_quote_item>
        </events>
        <fieldsets>
            <sales_convert_quote_item>
                <step_count>
                    <to_order_item>*</to_order_item>
                </step_count>
            </sales_convert_quote_item>
            <sales_convert_order_item>
                <step_count>
                    <to_quote_item>*</to_quote_item>
                    <to_invoice_item>*</to_invoice_item>
                    <to_shipment_item>*</to_shipment_item>
                </step_count>
            </sales_convert_order_item>
        </fieldsets>
        <routers>
            <checkout>
                <rewrite>
                    <cart>
                        <actions>
                            <configure><to>blackbox_pack/noroute/noroute</to></configure>
                        </actions>
                    </cart>
                </rewrite>
            </checkout>
        </routers>
    </global>
    <frontend>
        <layout>
            <updates>
                <blackbox_pack>
                    <file>blackbox/pack.xml</file>
                </blackbox_pack>
            </updates>
        </layout>
    </frontend>
</config>