<?xml version="1.0"?>
<config>
    <modules>
        <Blackbox_EpaceImport>
            <version>0.1.4</version>
        </Blackbox_EpaceImport>
    </modules>
    <global>
        <blocks>
            <epacei>
                <class>Blackbox_EpaceImport_Block</class>
            </epacei>
            <adminhtml>
                <rewrite>
                    <dashboard_sales>Blackbox_EpaceImport_Block_Adminhtml_Dashboard_Sales</dashboard_sales>
                    <sales_order_totals>Blackbox_EpaceImport_Block_Adminhtml_Sales_Order_Totals</sales_order_totals>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <epacei>
                <class>Blackbox_EpaceImport_Helper</class>
            </epacei>
        </helpers>
        <models>
            <epacei>
                <class>Blackbox_EpaceImport_Model</class>
                <resourceModel>epacei_resource</resourceModel>
            </epacei>
            <epacei_resource>
                <class>Blackbox_EpaceImport_Model_Resource</class>
                <entities>
                    <estimate>
                        <table>epacei_flat_estimate</table>
                    </estimate>
                    <estimate_grid>
                        <table>epacei_flat_estimate_grid</table>
                    </estimate_grid>
                    <estimate_item>
                        <table>epacei_flat_estimate_item</table>
                    </estimate_item>
                    <estimate_status_history>
                        <table>epacei_flat_estimate_status_history</table>
                    </estimate_status_history>
                    <receivable>
                        <table>epacei_flat_receivable</table>
                    </receivable>
                </entities>
            </epacei_resource>
        </models>
        <resources>
            <epace_import_setup>
                <setup>
                    <module>Blackbox_EpaceImport</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
            </epace_import_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <epace_import before="Mage_Adminhtml">Blackbox_EpaceImport_Adminhtml</epace_import>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <epace_import>
                    <file>blackbox/epace_import.xml</file>
                </epace_import>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <payment>
            <epace_payment>
                <model>epacei/payment_epace</model>
                <active>1</active>
                <order_status>pending</order_status>
                <title>Epace</title>
                <allowspecific>0</allowspecific>
                <sort_order>1</sort_order>
            </epace_payment>
        </payment>
        <carriers>
            <epace_shipping>
                <active>1</active>
                <model>epacei/shipping_carrier</model>
                <title>Epace Carrier</title>
                <sort_order>100</sort_order>
                <sallowspecific>0</sallowspecific>
            </epace_shipping>
        </carriers>
        <epace>
            <import>
                <update_estimates>1</update_estimates>
                <update_jobs>1</update_jobs>
                <update_closed_jobs>0</update_closed_jobs>
                <update_invoices>1</update_invoices>
                <update_shipments>1</update_shipments>
                <import_new>1</import_new>
            </import>
        </epace>
    </default>
    <crontab>
        <jobs>
            <epace_import>
                <schedule>
                    <cron_expr>0 */6 * * *</cron_expr>
                </schedule>
                <run>
                    <model>epacei/cron::updateEpaceEntities</model>
                </run>
            </epace_import>
        </jobs>
    </crontab>
</config>