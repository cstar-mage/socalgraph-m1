<?xml version="1.0"?>
<config>
    <modules>
        <Blackbox_Barcode>
            <version>0.1.0</version>
        </Blackbox_Barcode>
    </modules>
    <global>
        <blocks>
            <barcode>
                <class>Blackbox_Barcode_Block</class>
            </barcode>
        </blocks>
        <helpers>
            <barcode>
                <class>Blackbox_Barcode_Helper</class>
            </barcode>
        </helpers>
        <models>
            <barcode>
                <class>Blackbox_Barcode_Model</class>
            </barcode>
        </models>
        <resources>
            <barcode_setup>
                <setup>
                    <module>Blackbox_Barcode</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </barcode_setup>
        </resources>
        <events>
            <catalog_product_save_before>
                <observers>
                    <barcode>
                        <class>barcode/observer</class>
                        <method>productSaveBefore</method>
                    </barcode>
                </observers>
            </catalog_product_save_before>
            <catalog_product_save_commit_after>
                <observers>
                    <barcode>
                        <class>barcode/observer</class>
                        <method>productSaveCommitAfter</method>
                    </barcode>
                </observers>
            </catalog_product_save_commit_after>
            <catalog_product_delete_after_done>
                <observers>
                    <barcode>
                        <class>barcode/observer</class>
                        <method>productDeleteAfter</method>
                    </barcode>
                </observers>
            </catalog_product_delete_after_done>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <barcode after="Mage_Adminhtml">Blackbox_Barcode_Adminhtml</barcode>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <barcode>
                    <file>blackbox/barcode.xml</file>
                </barcode>
            </updates>
        </layout>
    </adminhtml>
    <default>
        <barcode>
            <settings>
                <filetype>jpg</filetype>
                <type>C128</type>
                <width_factor>2</width_factor>
                <height>300</height>
                <color>black</color>
            </settings>
        </barcode>
    </default>
</config>
